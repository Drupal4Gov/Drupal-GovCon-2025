<div class="listing-card border-xs">
  <div class="upper-card bg-light p-32 d-flex">
    {% if image %}
      <div class="listing-card__image">
        <img src="{{ image }}" alt="{{ image_alt }}" class="border-xs">
      </div>
    {% endif %}

      <div class="text-left">
        <h3 class="listing-card__heading">
          {{ heading }}
        </h3>

        {% if subheading %}
          <h4 class="listing-card__subheading">
            {{ subheading }}
          </h4>
        {% endif %}

        {% if description %}
          <p class="listing-card__description">
            {{ description }}
          </p>
        {% endif %}

        {% if link %}
          {% include "@atoms/button/button.twig" with {
          label: link.content,
          modifier: "button-with-icon icon--arrow-right icon-after",
          src_url: link.url,
          src_target: link.target,
          } %}
        {% endif %}
      </div>
    </div>

    {% if fields %}
      <div class="listing-card__fields body-text py-8 bg-skyblue d-flex">
        {% for field in fields %}
          <div class="listing-card__field d-flex">
            <strong>{{ field.label }}:</strong>{{ field.value }}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
  